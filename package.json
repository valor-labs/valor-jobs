{
  "name": "yaml-validator",
  "version": "1.0.0",
  "description": "Monorepo for Valor Jobs and Qualifications",
  "main": "validate.js",
  "scripts": {
    "validate": "node validate.js --schema=data/schemas/jobs_schema.yaml --data=data/jobs && node validate.js --schema=data/schemas/qualifications_schema.yaml --data=data/qualifications",
    "aggregate": "node aggregate.js",
    "prepare": "husky install"
  },
  "dependencies": {
    "ajv": "^8.6.3",
    "husky": "^9.0.11",
    "js-yaml": "^4.1.0",
    "lint-staged": "^15.2.2",
    "yargs": "^17.2.1"
  },
  "devDependencies": {
    "husky": "^8.0.0"
  },
  "lint-staged": {
    "*.yaml": [
      "npm run validate"
    ]
  }
}
